{
  "name": "awraris",
  "version": "1.0.0",
  "description": "ü¶è AWRARIS - Rhinoceros-powered CLI music streaming platform",
  "main": "dist/cli.js",
  "bin": {
    "awraris": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "build:bun": "bun build src/cli.ts --compile --outfile=awraris",
    "build:all": "npm run build:linux && npm run build:macos && npm run build:windows",
    "build:linux": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile=dist/awraris-linux",
    "build:macos": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile=dist/awraris-macos",
    "build:windows": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile=dist/awraris-windows.exe",
    "package": "npm run build:all && npm run package:tar",
    "package:tar": "cd dist && tar -czf awraris-linux.tar.gz awraris-linux && tar -czf awraris-macos.tar.gz awraris-macos && zip awraris-windows.zip awraris-windows.exe",
    "release": "npm run package && gh release create v$npm_package_version dist/*.tar.gz dist/*.zip --title \"AWRARIS v$npm_package_version\" --notes \"Release notes here\"",
    "publish:npm": "npm publish",
    "publish:github": "npm run release",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "dev-flow": "sh scripts/dev-flow.sh"
  },
  "keywords": [
    "cli",
    "music",
    "streaming",
    "terminal",
    "rhinoceros",
    "awraris"
  ],
  "author": "Daniel Demelash <danielddemissie@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.8.1",
    "blessed": "^0.1.81",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.1",
    "figlet": "^1.7.0",
    "googleapis": "^159.0.0",
    "ora": "^8.0.1",
    "puppeteer": "^24.17.1",
    "youtubei.js": "^15.0.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danielddemissie/awraris.git"
  },
  "bugs": {
    "url": "https://github.com/danielddemissie/awraris/issues"
  },
  "homepage": "https://github.com/danielddemissie/awraris#readme"
}
